@{
  Layout="HomeIndex";
}
@if(User.Identity.IsAuthenticated)
{
  @Html.ActionLink("My Account", "Index", "Account");
}
else
{
  @Html.ActionLink("Register", "Register", "Account")

  @Html.ActionLink(" Login", "LogIn", "Account")
}
<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <h3>Current Flavors</h3>
      @if(ViewBag.Flavors.Count == 0)
      {
        <p>None  - @Html.ActionLink("Add New", "Create", "Flavors")</p>
      }
      else 
      {
        <ul>
          @foreach(var flavor in ViewBag.Flavors)
          {
            <li>@Html.ActionLink($"{flavor.Name}", "Details", "Flavors",new{id=flavor.FlavorId})</li>
          }
        </ul>
      }
    </div>
    <div class="col-lg-6">
      <h3>Current Treats:</h3>
      @if(ViewBag.Treats.Count == 0)
      {
        <p>None  - @Html.ActionLink("Add New", "Create", "Treats")</p>
      }
      else 
      {
        <ul>
          @foreach(var treat in ViewBag.Treats)
          {
            <li>@Html.ActionLink($"{treat.Name}", "Details", "Treats",new{id=treat.TreatId})</li>
          }
        </ul>
      }
    </div>
  </div>
</div>


